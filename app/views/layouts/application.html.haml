!!!
%html
  %head
    %title= content_for?(:title) ? "Jerel and Liz - #{yield(:title)}" : "Jerel and Liz"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyD2kVf3aJ19N_H3lIB-mKqPD-lvm4YbTMY&sensor=true'
    = csrf_meta_tags

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-38153231-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    = render 'layouts/header'
    / .content
    /   = yield
    = yield